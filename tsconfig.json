{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "removeComments": false,
        "preserveConstEnums": true,
        "noLib": false,
        "inlineSourceMap": true,
        "inlineSources": true,
        "outDir": "dist",
        "rootDir": "src",
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "declaration": true,
        "declarationDir": "@types",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es6",
            "es2017.object"
        ]
    },
    "exclude": [
        "node_modules",
        "dist",
        "@types",
        "tests"
    ]
}
